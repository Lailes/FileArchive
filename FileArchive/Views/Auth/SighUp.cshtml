@model AuthData

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
     <meta name="viewport" content="width=device-width">
     <link rel="stylesheet" asp-href-include="lib/bootstrap/dist/css/*.min.css"/>
     <link rel="stylesheet" asp-href-include="styles/shared.css">
    <title>Log In</title>
</head>
<body>
<ul class="shadow">
    <li><text>File Archive</text></li>
</ul>
<form class="shadow welcome-div centered" asp-action="LogIn">
    <div class="mb-3">
        <label class="form-label">Login:</label>
        <input class="form-control" asp-for="LogIn">
        <div class="form-text">Enter your unique login ID</div>
    </div>
    <div class="mb-3">
        <label class="form-label">Password:</label>
        <input type="password" class="form-control" asp-for="Password">
    </div>
    <div class="mb-3">
        <label class="form-label">Repeat password:</label>
        <input type="password" class="form-control" asp-for="Password">
      </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <a class="btn btn-secondary go-right" asp-controller="Home" asp-action="Index">Go back</a>
</form>
</body>
</html>